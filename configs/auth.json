{
    "$schema": "../schemas/v3/index.json",
    "connections": {
        "example-1": {
            "type": "github",
            "token": {
                "env": "GITHUB_TOKEN_ENV_VAR"
            }
        },
        "example-2": {
            "type": "gitlab",
            "token": {
                "env": "GITLAB_TOKEN_ENV_VAR"
            },
            "groups": [
                "my-group"
            ]
        },
        "example-3": {
            "type": "gitea",
            "token": {
                "env": "GITEA_TOKEN_ENV_VAR"
            },
            "orgs": [
                "my-org"
            ]
        }
    }
}